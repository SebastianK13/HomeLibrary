@model HomeLibrary.Models.BasicProfileInfoModels
<div id="profile-view" class="profile-view-content">
    <div id="profile-head" class="head-profile" style="background-image: url('@Url.Content("~/Images/" + Model.BackgroundPic)" )')" value=@Model.BackgroundPic>
        <div id="profile-mask" class="profile-head-mask"></div>
        <div id="profile-photo" class="photo-profile" style="background-image: url('@Url.Content("~/Images/" + Model.ProfilePic)" )')" value=@Model.ProfilePic>
        </div>
        <label class="nickname-profile">@Model.Nickname</label>
    </div>
    <div class="head-profile-bottom">
        <ul class="profile-navbar">
            <li class="profile-navbar-li"><a href="/Community/FriendsPictures?profileID=@Model.ProfileID">Photos</a></li>
            <li class="profile-navbar-li"><a href="/Community/FriendsInformations?profileID=@Model.ProfileID">Informations</a></li>
            <li class="profile-navbar-li"><a href="/Community/FriendsUserList?profileID=@Model.ProfileID">Friends</a></li>
        </ul>
    </div>
    <div id="profile-body" class="corpse-profile">
        <div class="left-panel-content">
            <div class="header-add-book info-center">Profile informations</div>
            <div class="right-panel-manage">
                <ul id="profile-info-list" class="profile-info">
                    @Html.AntiForgeryToken()
                    <li id="Nickname-li" class="expand-area">
                        <div class="left-panel-left-label friend-field-name-overflow">
                            @Html.Label("Nickname")
                        </div>
                        @if (Model.Nickname == null)
                        {
                            <div class="left-panel-book-field friend-profile-info">
                                <p>unknown</p>
                            </div>
                        }
                        else
                        {
                            <div class="left-panel-book-field friend-profile-info">
                                <p>@Model.Nickname</p>
                            </div>
                        }
                    </li>
                    <li id="Age-li" class="expand-area">
                        <div class="left-panel-left-label friend-field-name-overflow">
                            @Html.Label("Age")
                        </div>
                        @if (Model.Age == 0)
                        {
                            <div class="left-panel-book-field friend-profile-info">
                                <p>unknown</p>
                            </div>
                        }
                        else
                        {
                            <div class="left-panel-book-field friend-profile-info">
                                <p>@Model.Age</p>
                            </div>
                        }
                    </li>
                    <li id="Country-li" class="expand-area">
                        <div class="left-panel-left-label friend-field-name-overflow">
                            @Html.Label("Country")
                        </div>
                        <div class="left-panel-book-field friend-profile-info">
                            <p>@Model.Country</p>
                        </div>
                    </li>
                    <li id="City-li" class="expand-area">
                        <div class="left-panel-left-label friend-field-name-overflow">
                            @Html.Label("City")
                        </div>
                        <div class="left-panel-book-field friend-profile-info">
                            <p>@Model.City</p>
                        </div>
                    </li>
                    <li id="Quote-li" class="expand-area">
                        <div class="left-panel-left-label friend-field-name-overflow">
                            @Html.Label("Favourite quote")
                        </div>
                        <div class="left-panel-book-field friend-profile-info">
                            <p>@Model.Quote</p>
                        </div>
                    </li>
                    <li id="Category-li" class="expand-area higher">
                        <div class="left-panel-left-label friend-field-name-overflow">
                            @Html.Label("Favourite book category")
                        </div>
                        <div class="left-panel-book-field friend-profile-info">
                            <p>@Model.FavouriteBookCategory</p>
                        </div>
                    </li>
                    <li id="Book-li" class="last-li expand-area">
                        <div class="left-panel-left-label friend-field-name-overflow">
                            @Html.Label("Favourite book")
                        </div>
                        <div class="left-panel-book-field friend-profile-info">
                            <p>@Model.FavouriteBook</p>
                        </div>
                    </li>
                </ul>
                <div class="error">
                    @Html.ValidationSummary(false, "", new { @class = "error" })
                </div>
            </div>
        </div>
    </div>
</div>
